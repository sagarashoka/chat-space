.side_bar
  .side_bar-1
    .side_bar-1__box
      %p.side_bar-1__box__username
        = current_user.name
      .side_bar-1__box__menu
        =link_to new_group_path(current_user) do
          = icon('fa','edit', class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

  .side_bar_2
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__latest-message
            = group.show_last_message            
